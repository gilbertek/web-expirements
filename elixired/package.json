{
  "name": "elixired",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Gilbert Ekoue",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel dev test:watch",
    "dev": "webpack-dev-server --mode development --color --open",
    "dashboard": "webpack-dashboard -- webpack-dev-server --mode development --color --open",
    "lint": "eslint .",
    "lint:fix": "yarn run lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "build": "webpack --mode production --env.platform=web --progress",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prettier": "prettier **/*.js --write"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/jest.setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.22.1",
    "prop-types": "^15.6.0",
    "react": "^16.3.2",
    "react-aria-modal": "^2.12.1",
    "react-autosuggest": "^9.3.4",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "toastr": "^2.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "enzyme": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-watch": "^3.1.3",
    "expect": "^22.2.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^4.0.0",
    "jasmine": "^3.0.0",
    "jest": "^22.4.3",
    "jest-serializer-enzyme": "^1.0.0",
    "jsdom": "^11.6.2",
    "lodash-webpack-plugin": "^0.11.5",
    "mocha": "^5.0.0",
    "nock": "^9.1.6",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.17",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.0",
    "postcss-url": "^7.3.0",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "react-test-utils": "^0.0.1",
    "redux-mock-store": "^1.5.1",
    "sass-loader": "^7.0.1",
    "sinon": "^5.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.3"
  },
  "optionalDependencies": {
    "fsevents": "1.2.3"
  }
}
